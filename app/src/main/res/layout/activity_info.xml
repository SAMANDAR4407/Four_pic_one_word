<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_playground"
    tools:context=".ui.info.InfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginBottom="200dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/dm_serif_display"
            android:text="ABOUT"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/dm_serif_display"
            android:text="This app made by \n an android learner.\n\nIf you've faced any kind  \nof problem please contact me"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="serif-monospace"
            android:linksClickable="true"
            android:text="@string/link"
            android:textColor="#223DEC"
            android:textSize="20sp" />
    </LinearLayout>



    <androidx.cardview.widget.CardView
        android:id="@+id/main_menu"
        android:layout_width="180dp"
        android:layout_gravity="center"
        android:layout_height="60dp"
        android:layout_marginTop="250dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/purple_700">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/dm_serif_display"
            android:text="Main Menu"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </androidx.cardview.widget.CardView>

</FrameLayout>